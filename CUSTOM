// REPLACE your old cs() with this:
function cs() {
    const u = st.a.filter(a => a === null).length;
    const modal = document.getElementById('customConfirm');
    const msg = document.getElementById('confirmMsg');
    
    // Set message without the browser "says..." header
    msg.textContent = u > 0 
        ? `You have ${u} unattempted question(s). Do you want to submit?` 
        : "Are you sure you want to submit your quiz?";
    
    modal.style.display = 'flex'; // Show your custom popup
}

// ADD this new function
function closeConfirm() {
    document.getElementById('customConfirm').style.display = 'none';
}

// ADD this new function
function finalSubmit() {
    closeConfirm();
    sbq(); // This triggers your existing scoring logic
}

